{
  "$schema": "http://json.schemastore.org/prettierrc",
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "all",
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": [
        ".*rc",
        "*.json"
      ],
      "options": {
        "parser": "json-stringify"
      }
    }
  ]
}
